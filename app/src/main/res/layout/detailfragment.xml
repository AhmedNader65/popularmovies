<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <mrerror.popularmovies.customfonts.TextViewTitle
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:textSize="40dp"
        />
    <LinearLayout
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="300dp"/>
        <LinearLayout
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <mrerror.popularmovies.customfonts.TextViewContent
                android:id="@+id/date"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_height="wrap_content"/>
            <mrerror.popularmovies.customfonts.TextViewContent
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:id="@+id/rate"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/favIco"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    />
                <mrerror.popularmovies.customfonts.TextViewContent
                    android:id="@+id/favText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <mrerror.popularmovies.customfonts.TextViewContent
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:id="@+id/overview"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        />
    <mrerror.popularmovies.customfonts.TextViewSubtitle
        android:id="@+id/TrailerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trailers:"
        android:visibility="gone"
        android:textSize="22sp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        />
    <android.support.v7.widget.RecyclerView
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:id="@+id/trailersList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <mrerror.popularmovies.customfonts.TextViewSubtitle
        android:id="@+id/ReviewsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reviews:"
        android:visibility="gone"
        android:textSize="22sp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        />
    <android.support.v7.widget.RecyclerView
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:id="@+id/reviewsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
</ScrollView>